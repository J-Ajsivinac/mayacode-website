---
import Button from "../../components/ui/Button.astro";
---
<section class="py-16 px-4 mx-auto bg-[#f9f5f0]" id="contacto">
    <!-- Header -->
    <div class="text-center mb-12" data-aos="fade-up">
        <h2
            class="text-4xl md:text-5xl font-bold text-gray-800 mb-4 tracking-tight"
        >
            Contáctanos
        </h2>
    </div>

    <div
        class="flex flex-col lg:flex-row w-full px-6 lg:px-12 gap-8 justify-center"
    >
        <!-- Info de contacto -->
        <div class="w-full lg:w-1/3" data-aos="fade-right" data-aos-delay="200">
            <h3 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-6">
                Estamos Aquí para Ayudarte
            </h3>

            <div class="space-y-6">
                <div class="flex items-start gap-3">
                    <i class="fas fa-map-marker-alt text-[#797979] mt-1"></i>
                    <div>
                        <h4 class="text-[#797979] font-semibold">Dirección</h4>
                        <p class="text-gray-700">
                            12 Calle 15-20, Zona 1, Guatemala City
                        </p>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <i class="fas fa-phone text-[#797979] mt-1"></i>
                    <div>
                        <h4 class="text-[#797979] font-semibold">Teléfono</h4>
                        <p class="text-gray-700">+502 2345-6789</p>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <i class="fas fa-envelope text-[#797979] mt-1"></i>
                    <div>
                        <h4 class="text-[#797979] font-semibold">Email</h4>
                        <p class="text-gray-700">info@mayacode.com</p>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <i class="fas fa-clock text-[#797979] mt-1"></i>
                    <div>
                        <h4 class="text-[#797979] font-semibold">Horario</h4>
                        <p class="text-gray-700">
                            Lunes a Viernes: 8:00 AM - 6:00 PM
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario -->
        <div
            class="contact-form w-full lg:w-1/2"
            data-aos="fade-left"
            data-aos-delay="300"
        >
            <form class="space-y-4">
                <div>
                    <input
                        type="text"
                        placeholder="Tu Nombre"
                        required
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63]"
                    />
                </div>
                <div>
                    <input
                        type="email"
                        placeholder="Tu Email"
                        required
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63]"
                    />
                </div>
                <div>
                    <input
                        type="text"
                        placeholder="Asunto"
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63]"
                    />
                </div>
                <div>
                    <textarea
                        placeholder="Tu Mensaje"
                        required
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63] h-32"
                    ></textarea>
                </div>

                <Button
                    href="#comprar"
                    target={"buy_self"}
                    variant={"secondary"}
                    size="md"
                >
                    Enviar
                </Button>
            </form>
        </div>
    </div>
</section>
