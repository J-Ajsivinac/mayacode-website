---
import Button from "../../components/ui/Button.astro";
---

<section class="header-offset bg-[#f9f5f0] overflow-hidden" id="contacto">
    <!-- Contenedor principal con padding responsivo -->
    <div
        class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20 xl:py-24"
    >
        <!-- Header -->
        <header class="text-center mb-8 sm:mb-12 lg:mb-16" data-aos="fade-up">
            <h2
                class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-800 mb-2 sm:mb-4 tracking-tight leading-tight"
            >
                Contáctanos
            </h2>
            <p
                class="text-base sm:text-lg md:text-xl text-gray-600 max-w-2xl mx-auto mt-4"
            >
                Estamos listos para ayudarte con cualquier consulta sobre
                nuestros productos
            </p>
        </header>

        <!-- Contenedor principal del contenido -->
        <div
            class="flex flex-col xl:flex-row gap-8 sm:gap-10 lg:gap-12 xl:gap-16 2xl:gap-20"
        >
            <!-- Información de contacto -->
            <aside
                class="w-full xl:w-2/5"
                data-aos="fade-right"
                data-aos-delay="200"
            >
                <div
                    class="bg-white rounded-2xl sm:rounded-3xl p-6 sm:p-8 lg:p-10 shadow-lg hover:shadow-xl transition-all duration-300"
                >
                    <header class="mb-6 sm:mb-8">
                        <h3
                            class="text-xl sm:text-2xl md:text-3xl lg:text-2xl xl:text-3xl font-semibold text-gray-800 mb-2 leading-tight"
                        >
                            Estamos Aquí para Ayudarte
                        </h3>
                        <p class="text-sm sm:text-base text-gray-600">
                            Ponte en contacto con nosotros a través de
                            cualquiera de estos medios
                        </p>
                    </header>

                    <div class="space-y-4 sm:space-y-6 lg:space-y-5">
                        <!-- Dirección -->
                        <div
                            class="flex items-start gap-3 sm:gap-4 p-3 sm:p-4 rounded-xl hover:bg-gray-50 transition-colors duration-200"
                        >
                            <div
                                class="flex-shrink-0 w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center"
                            >
                                <i
                                    class="fas fa-map-marker-alt text-[#8d6e63] text-lg sm:text-xl"
                                ></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <h4
                                    class="text-[#8d6e63] font-semibold text-sm sm:text-base mb-1"
                                >
                                    Dirección
                                </h4>
                                <p
                                    class="text-gray-700 text-sm sm:text-base leading-relaxed"
                                >
                                    12 Calle 15-20, Zona 1,<br
                                        class="hidden sm:inline"
                                    /> Guatemala City
                                </p>
                            </div>
                        </div>

                        <!-- Teléfono -->
                        <div
                            class="flex items-start gap-3 sm:gap-4 p-3 sm:p-4 rounded-xl hover:bg-gray-50 transition-colors duration-200"
                        >
                            <div
                                class="flex-shrink-0 w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center"
                            >
                                <i
                                    class="fas fa-phone text-[#8d6e63] text-lg sm:text-xl"
                                ></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <h4
                                    class="text-[#8d6e63] font-semibold text-sm sm:text-base mb-1"
                                >
                                    Teléfono
                                </h4>
                                <a
                                    href="tel:+50223456789"
                                    class="text-gray-700 hover:text-[#8d6e63] text-sm sm:text-base transition-colors duration-200"
                                >
                                    +502 2345-6789
                                </a>
                            </div>
                        </div>

                        <!-- Email -->
                        <div
                            class="flex items-start gap-3 sm:gap-4 p-3 sm:p-4 rounded-xl hover:bg-gray-50 transition-colors duration-200"
                        >
                            <div
                                class="flex-shrink-0 w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center"
                            >
                                <i
                                    class="fas fa-envelope text-[#8d6e63] text-lg sm:text-xl"
                                ></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <h4
                                    class="text-[#8d6e63] font-semibold text-sm sm:text-base mb-1"
                                >
                                    Email
                                </h4>
                                <a
                                    href="mailto:info@mayacode.com"
                                    class="text-gray-700 hover:text-[#8d6e63] text-sm sm:text-base transition-colors duration-200 break-all"
                                >
                                    info@mayacode.com
                                </a>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div
                            class="flex items-start gap-3 sm:gap-4 p-3 sm:p-4 rounded-xl hover:bg-gray-50 transition-colors duration-200"
                        >
                            <div
                                class="flex-shrink-0 w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center"
                            >
                                <i
                                    class="fas fa-clock text-[#8d6e63] text-lg sm:text-xl"
                                ></i>
                            </div>
                            <div class="min-w-0 flex-1">
                                <h4
                                    class="text-[#8d6e63] font-semibold text-sm sm:text-base mb-1"
                                >
                                    Horario
                                </h4>
                                <p
                                    class="text-gray-700 text-sm sm:text-base leading-relaxed"
                                >
                                    Lunes a Viernes:<br class="sm:hidden" /> 8:00
                                    AM - 6:00 PM
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Formulario de contacto -->
            <main
                class="w-full xl:w-3/5"
                data-aos="fade-left"
                data-aos-delay="300"
            >
                <div
                    class="bg-white rounded-2xl sm:rounded-3xl p-6 sm:p-8 lg:p-10 shadow-lg hover:shadow-xl transition-all duration-300"
                >
                    <header class="mb-6 sm:mb-8">
                        <h3
                            class="text-xl sm:text-2xl md:text-3xl lg:text-2xl xl:text-3xl font-semibold text-gray-800 mb-2 leading-tight"
                        >
                            Envíanos un Mensaje
                        </h3>
                        <p class="text-sm sm:text-base text-gray-600">
                            Completa el formulario y te responderemos lo antes
                            posible
                        </p>
                    </header>

                    <form class="space-y-4 sm:space-y-6" id="contact-form">
                        <!-- Grid para nombre y email en desktop -->
                        <div
                            class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6"
                        >
                            <div class="space-y-2">
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Nombre *
                                </label>
                                <input
                                    id="name"
                                    type="text"
                                    name="name"
                                    placeholder="Tu nombre completo"
                                    required
                                    class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63] focus:border-transparent transition-all duration-200 hover:border-gray-400"
                                />
                            </div>

                            <div class="space-y-2">
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-gray-700 mb-2"
                                >
                                    Email *
                                </label>
                                <input
                                    id="email"
                                    type="email"
                                    name="email"
                                    placeholder="tu@email.com"
                                    required
                                    class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63] focus:border-transparent transition-all duration-200 hover:border-gray-400"
                                />
                            </div>
                        </div>

                        <!-- Asunto -->
                        <div class="space-y-2">
                            <label
                                for="subject"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Asunto
                            </label>
                            <input
                                id="subject"
                                type="text"
                                name="subject"
                                placeholder="¿En qué podemos ayudarte?"
                                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63] focus:border-transparent transition-all duration-200 hover:border-gray-400"
                            />
                        </div>

                        <!-- Mensaje -->
                        <div class="space-y-2">
                            <label
                                for="message"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Mensaje *
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                placeholder="Cuéntanos más detalles sobre tu consulta..."
                                required
                                rows="4"
                                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8d6e63] focus:border-transparent transition-all duration-200 hover:border-gray-400 resize-y min-h-[100px] sm:min-h-[120px]"
                            ></textarea>
                        </div>

                        <!-- Botón de envío -->
                        <div class="pt-2 sm:pt-4">
                            <Button
                                href="#"
                                target="_self"
                                variant="secondary"
                                size="md"
                                class="w-full sm:w-auto"
                            >
                                <i class="fas fa-paper-plane mr-2"></i>
                                Enviar Mensaje
                            </Button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
</section>

<style>
    /* Compensar navbar fija */
    .header-offset {
        scroll-margin-top: 80px;
        box-sizing: border-box;
    }

    @media (max-width: 768px) {
        .header-offset {
            scroll-margin-top: 70px;
        }
    }

    @media (max-width: 640px) {
        .header-offset {
            scroll-margin-top: 60px;
        }
    }

    /* Optimizaciones para móviles muy pequeños */
    @media (max-width: 375px) {
        .space-y-4 > * + * {
            margin-top: 1rem;
        }

        .space-y-6 > * + * {
            margin-top: 1.25rem;
        }

        .grid-cols-1 {
            gap: 1rem;
        }
    }

    /* Optimización para dispositivos ultra pequeños */
    @media (max-width: 320px) {
        .rounded-2xl {
            border-radius: 1rem;
        }

        .p-6 {
            padding: 1rem;
        }

        .text-3xl {
            font-size: 1.75rem;
        }
    }

    /* Mejorar el grid en tablets */
    @media (min-width: 768px) and (max-width: 1023px) {
        .md\:grid-cols-2 {
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.5rem;
        }
    }

    /* Optimización para pantallas grandes */
    @media (min-width: 1400px) {
        .space-y-6 > * + * {
            margin-top: 2rem;
        }

        .xl\:gap-16 {
            gap: 5rem;
        }
    }

    /* Mejorar accesibilidad en focus */
    input:focus,
    textarea:focus {
        box-shadow: 0 0 0 3px rgba(141, 110, 99, 0.1);
    }

    /* Mejora de contraste para labels */
    label {
        font-weight: 600;
    }

    /* Optimización de placeholder */
    ::placeholder {
        color: rgb(156, 163, 175);
        opacity: 1;
    }

    /* Hover states para enlaces */
    a:hover {
        text-decoration: underline;
    }

    /* Transiciones suaves */
    * {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Respeto por preferencias de movimiento */
    @media (prefers-reduced-motion: reduce) {
        * {
            transition: none !important;
            animation: none !important;
        }
    }

    /* Mejora para touch devices */
    @media (pointer: coarse) {
        input,
        textarea,
        button {
            min-height: 44px;
        }
    }

    /* Prevenir zoom en inputs en iOS */
    @media screen and (-webkit-min-device-pixel-ratio: 0) {
        input,
        textarea {
            font-size: 16px;
        }
    }

    /* Optimización de espaciado vertical */
    @media (max-width: 640px) {
        .space-y-4 > * + *,
        .space-y-6 > * + * {
            margin-top: 1rem;
        }
    }
</style>
