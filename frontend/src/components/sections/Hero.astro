---
import Button from "../ui/Button.astro";
interface HeroContent {
    extra: string;
    title: string;
    description: string;
    buttons?: {
        text: string;
        link: string;
        variant?: "primary" | "secondary" | "ghostLight" | "ghostDark";
        target?: string;
    }[];
    backgroundImage?: string | any;
    overlayOpacity?: number;
}

interface Props {
    content: HeroContent;
}

const { content } = Astro.props;
---

<section class="header-offset relative min-h-screen flex items-center overflow-hidden" id="inicio">
    <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 relative z-10">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 lg:gap-12">
            <!-- Contenido de texto -->
            <div class="flex flex-col text-center lg:text-left lg:w-1/2 xl:w-3/5">
                <p class="uppercase text-sm sm:text-base lg:text-lg font-semibold mb-3 sm:mb-4 text-[#797979]" data-aos="fade-up">
                    {content.extra}
                </p>
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-4 sm:mb-6 text-[#3e2723] leading-tight" data-aos="fade-up">
                    {content.title}
                </h1>
                <p class="text-sm sm:text-base md:text-lg lg:text-xl leading-relaxed text-[#717171] mb-6 sm:mb-8" data-aos="fade-up">
                    {content.description}
                </p>
                {
                    content.buttons && content.buttons.length > 0 && (
                        <div class="flex flex-col sm:flex-row flex-wrap justify-center lg:justify-start gap-3 sm:gap-4" data-aos="fade-up">
                            {content.buttons.map((button) => (
                                <Button
                                    href={button.link}
                                    target={button.target || "_self"}
                                    variant={button.variant || "primary"}
                                    size="lg"
                                >
                                    {button.text}
                                </Button>
                            ))}
                        </div>
                    )
                }
            </div>
            
            <!-- Contenedor de imagen optimizado -->
            <div class="flex justify-center lg:justify-end lg:w-1/2 xl:w-2/5" data-aos="fade-left">
                <div class="w-full max-w-sm sm:max-w-md md:max-w-lg lg:max-w-none relative">
                    <img 
                        src="/mayacode-website/coffee.png" 
                        alt="Coffee image" 
                        class="w-full h-auto object-cover rounded-3xl shadow-lg hover:shadow-xl transition-shadow duration-300"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .header-offset {
        width: 100%;
        box-sizing: border-box;
        padding-top: 12rem; 
        margin-top: -80px;
    }
    
    @media (max-width: 768px) {
        .header-offset {
            padding-top: 70px;
            margin-top: -70px;
        }
    }
    
    @media (max-width: 640px) {
        .header-offset {
            padding-top: 100px; /* Navbar responsiv */
            margin-top: -60px;
        }
    }
    
    @media (max-width: 640px) {
        .about-image {
            padding: 0 1rem;
        }
    }
    
    @media (min-width: 641px) and (max-width: 1023px) {
        .about-image > div {
            max-width: 400px;
        }
    }
    
    @media (max-width: 375px) {
        .about-image > div {
            max-width: 280px;
        }
    }
</style>