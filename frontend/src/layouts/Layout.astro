---
import { ClientRouter } from "astro:transitions";
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
const theme = "apollo";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
    </head>
    <body data-theme={theme}>
        <Navbar class="fixed inset-0 bg-black/50 z-40 hidden" />
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

<script>
    import AOS from "aos";
    AOS.init();

    document.addEventListener("astro:after-swap", () => {
        // Reinicializar AOS después de cada cambio de página
        if (typeof AOS !== "undefined") {
            AOS.refresh();
            // O si necesitas reinicializar completamente:
            // AOS.init();
        }
    });

    document.addEventListener("astro:page-load", () => {
        // Inicializar AOS cuando la página se carga
        if (typeof AOS !== "undefined") {
            AOS.init({
                duration: 800,
                easing: "ease-in-out",
                once: false, // Importante: permite que las animaciones se repitan
                mirror: false, // No animar al hacer scroll hacia arriba
            });
        }
    });
</script>
